<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alex.fakecall">

    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.HomeActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.EditCallActivity"
            android:label="@string/edit_call" />

        <activity
            android:name=".activities.ThemeSelectActivity"
            android:label="@string/choose_theme" />

        <activity
            android:name=".activities.ScheduledActivity"
            android:label="@string/lb_scheduled" />

        <activity
            android:name=".activities.MoreCallSettingsActivity"
            android:label="@string/lb_optional_settings" />

        <activity
            android:name=".themes.Android6xActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance" />

        <activity
            android:name=".themes.GalaxyS6Activity"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance" />

        <receiver android:name=".receivers.FakeCallReceiver">
            <intent-filter>
                <action android:name="com.alex.fakecall.ACTION_CALL_RECEIVER" />
            </intent-filter>
        </receiver>

    </application>

</manifest>